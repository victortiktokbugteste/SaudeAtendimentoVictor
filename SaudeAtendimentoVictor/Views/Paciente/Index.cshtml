@{
    ViewData["Title"] = "Pacientes";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/lib/swiper/swiper-bundle.min.css">

<div class="container pt-5" ng-app="myApp" ng-controller="pacienteController">
    <div class="spinerBackground">
        <div class="spinerStyle" id="loading-bar-container">

        </div>
    </div>
    <div id="popupContainer">

    </div>

    <div>
        <div class="form-row">
            <div class="col-auto ml-auto">
                <button type="button" class="btn btn-primary" ng-click="adicionarPaciente()">Cadastrar</button>
            </div>
        </div>
    </div><br /><br />


    <div class="row" ng-show="list.pacientes == null || list.pacientes.length == 0">
        <div class="col-sm-12">
            <h3>Nenhum paciente adicionado ainda.</h3>
        </div>
    </div>

    <div class="table-responsive" ng-show="list.pacientes != null && list.pacientes.length > 0">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Sexo</th>
                    <th>E-mail</th>
                    <th>Excluir</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="paciente in list.pacientes">
                    <td>{{ paciente.nome }}</td>
                    <td>{{ paciente.telefone }}</td>
                    <td>{{ paciente.sexo }}</td>
                    <td>{{ paciente.email }}</td>
                    <td><button class="btn btn-sm" ng-click="excluirPaciente(paciente)"><i class="bi bi-trash"></i></button></td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Cadastro de Paciente</h4>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Nome do paciente</label>
                            <input type="text" class="form-control" ng-model="entity.nome">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Telefone do paciente</label>
                            <input type="text" class="form-control" ng-model="entity.telefone">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Sexo</label>
                            <input type="text" class="form-control" ng-model="entity.sexo">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>E-mail</label>
                            <input type="text" class="form-control" ng-model="entity.email">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" ng-click="save_click()">Salvar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" ng-click="closeModal()">Fechar</button>
                </div>
            </div>
        </div>


    </div>
</div>

<script src="lib/isotope-layout/isotope.pkgd.min.js"></script>
<script src="/js/main.js"></script>
